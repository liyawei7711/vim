<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/letter_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_EDEDED"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_choice"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/default_image_personal" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_user_head"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="B 同事"
            android:textColor="@color/black333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_choose_added"
            android:layout_width="45dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="297dp"
            android:textColor="#ff01c24d"
            android:textSize="13sp" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40dp"
            android:background="@color/back_gray" />
    </RelativeLayout>

</LinearLayout>